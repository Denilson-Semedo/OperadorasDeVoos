<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <!-- TextView for heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bem-Vindo a"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textStyle="normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ilhas Air Lines"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textStyle="normal"/>

        <EditText
            android:id="@+id/idetificacao"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:hint="CNI/BI/Passaporte"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/nome"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:hint="Nome (primeiro e último)"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/dataNasc"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:hint="DataNascimento"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/email"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:hint="Username"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/passwd"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:hint="Password"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:gravity="center"/>

        <EditText
            android:id="@+id/passwd2"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:hint="Confirmação password"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:gravity="center"/>

        <!-- Button for Login with text "Login" -->
        <Button
            android:id="@+id/btnregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registar" />

    </LinearLayout>
</LinearLayout>